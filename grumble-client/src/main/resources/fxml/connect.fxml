<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gg.grumble.client.controllers.ConnectController">
    <TreeTableView fx:id="treeTableView" prefHeight="400.0" prefWidth="600.0">
        <columns>
            <TreeTableColumn fx:id="serverNameColumn" prefWidth="400.0" resizable="false" text="Server Name" />
            <TreeTableColumn fx:id="pingColumn" prefWidth="100.0" resizable="false" text="Ping" />
            <TreeTableColumn fx:id="usersColumn" prefWidth="100.0" resizable="false" text="Users" />
        </columns>
    </TreeTableView>
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
        </padding>
        <Button onAction="#onConnect" text="Connect" />
        <Button onAction="#onAddNew" text="Add New..." />
        <Button onAction="#onEdit" text="Edit..." />
        <Button onAction="#onCancel" text="Cancel" />
    </HBox>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
